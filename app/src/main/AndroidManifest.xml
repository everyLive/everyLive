        <activity android:name=".game.roulette" android:exported="true"/>


        <activity android:name=".livestream.Activity_Liveinsertinfo"/>
        <activity android:name=".livestream.Activity_Liveupdateinfo"
            android:theme="@style/Theme.AppCompat.Dialog"/>
        <activity android:name=".livestream.Activity_Livestreamer"/>
        <activity android:name=".livestream.Activity_Liveplayer"/>

        <activity android:name=".payment.Activity_Selectcoin"/>
        <service android:name=".livestream.Activity_ChatService"/>
        <activity android:name=".livestream.Activity_Liveendinfo"
            android:theme="@style/Theme.AppCompat.Dialog"/>
        <activity android:name=".livestream.Activity_Liveplayerend"
            android:theme="@style/Theme.AppCompat.Dialog"/>


        <activity android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- Redirect URI: "kakao{NATIVE_APP_KEY}://oauth“ -->
                <data
                    android:host="oauth"
                    android:scheme="kakaoa9ccf9d78e7ad93cfcaa07604daa04f7" />
            </intent-filter>
        </activity>


