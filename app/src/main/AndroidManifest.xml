        <!-- fileProvider을 통해 생성한 파일을 앱 내외부로 공유할 수 있도록 선언 -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.everylive.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
