<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/boldline">

    <TextView
        android:id="@+id/roomcategory"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="20dp"
        android:text="카테고리"
        android:textColor="@color/purple_700"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/roomIMG"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/roomIMG"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/roomtitle"
        android:layout_width="143dp"
        android:layout_height="26dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="16dp"
        android:text="방제목"
        android:textSize="20dp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@+id/roomcategory"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/roomcontents"
        android:layout_width="227dp"
        android:layout_height="53dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="인삿말"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/roomIMG"
        app:layout_constraintTop_toBottomOf="@+id/roomtitle" />

    <ImageView
        android:id="@+id/genderIMG"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="13dp"
        app:layout_constraintStart_toEndOf="@+id/roomIMG"
        app:layout_constraintTop_toBottomOf="@+id/roomcontents"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nickName"
        android:layout_width="114dp"
        android:layout_height="20dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="5dp"
        android:text="닉네임"
        app:layout_constraintStart_toEndOf="@+id/genderIMG"
        app:layout_constraintTop_toBottomOf="@+id/roomcontents" />

    <TextView
        android:id="@+id/textView48"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roomIMG" />

    <TextView
        android:id="@+id/participants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="5dp"
        android:hint="시청인원"
        android:visibility="invisible"
        android:textColor="@color/purple_700"
        app:layout_constraintStart_toEndOf="@+id/nickName"
        app:layout_constraintTop_toBottomOf="@+id/roomcontents" />


</androidx.constraintlayout.widget.ConstraintLayout>
