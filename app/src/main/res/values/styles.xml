<?xml version="1.0" encoding="utf-8"?>
<resources>
<!-- Base application theme -->
    <style name="Theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Original AppCompat attributes. -->
        <item name="colorPrimary">@color/Reply_Blue700</item>
        <item name="colorSecondary">@color/Reply_Orange</item>
        <item name="colorControlActivated">@color/Reply_Blue800</item>
        <item name="colorControlNormal">@color/Reply_Blue600_light</item>
        <item name="android:textSelectHandle">@color/Reply_Blue800</item>
        <item name="android:textCursorDrawable">@color/Reply_Blue800</item>
    </style>

    <style name="Theme2" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Original AppCompat attributes. -->
        <item name="colorPrimary">@color/Reply_Blue700</item>
        <item name="colorSecondary">@color/Reply_Orange</item>
        <item name="colorControlActivated">@color/Reply_Blue800</item>
        <item name="colorControlNormal">@color/Reply_Blue600_light</item>
        <item name="android:textSelectHandle">@color/Reply_Blue800</item>
        <item name="android:textCursorDrawable">@color/Reply_Blue800</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">

        <!-- Dark 모드를 써야하는데, 액션바를 지워야할 때 -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Add these -->
        <item name="materialCalendarStyle">@style/Widget.MaterialComponents.MaterialCalendar</item>
        <item name="materialCalendarFullscreenTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar</item>
    </style>

</resources>